/**index.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: #f5f5f5;
}

.header {
  padding: 120rpx 30rpx 20rpx 30rpx;
  background: #f5f5f5;
}

.title {
  display: flex;
  align-items: center;
}

.title-icon {
  font-size: 40rpx;
  margin-right: 12rpx;
}

.title-text {
  font-size: 40rpx;
  font-weight: bold;
}

.scrollarea {
  flex: 1;
  overflow-y: hidden;
}

.container {
  padding: 0 20rpx;
}

.tool-list {
  width: 100%;
  padding-top: 20rpx;
}

.tool-item {
  background: #ffffff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  position: relative;
}

.tool-icon {
  width: 80rpx;
  height: 80rpx;
  background: #f0f0f0;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
}

.tool-content {
  flex: 1;
}

.tool-name {
  font-size: 32rpx;
  margin-bottom: 8rpx;
  font-weight: 500;
  color: #333;
}

.tool-desc {
  font-size: 26rpx;
  color: #666;
}

.tool-arrow {
  color: #ccc;
  font-size: 32rpx;
}
